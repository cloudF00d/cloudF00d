                <if test="nation3 == 'writer'">
                    C.USER_NAME LIKE CONCAT('%', #{ searchValue }, '%')
                </if>
            </if>
            <if test="authority == 'finish'">
                <if test="searchValue != null and !searchValue.equals('')">
                    AND
